{% extends 'base.html.twig' %}

{% block page %}{{ title }}{% endblock %}
{% block title %}{{ title }}{% endblock %}

{% block body %}
    <h2>経費精算</h2>
    <table>
        <tr>
            <th>社員</th>
            <th>申請日</th>
            <th>申請内容</th>
            <th>単価</th>
            <th>数量</th>
            <th>合計</th>
            <th>備考</th>
            <th>精算</th>
            <th>変更</th>
            <th>削除</th>
        </tr>
        {% for item in data %}
            <tr>
                <td>{{ item.user.username }}</td>
                <td>{{ item.reportingdate.format('Y/m/d') }}</td>
                <td>{{ item.account.accountname }}</td>
                <td class="int">{{ item.price|number_format }}</td>
                <td class="int">{{ item.qty|number_format }}</td>
                <td class="int">{{ (item.price * item.qty)|number_format }}</td>
                <td>{{ item.note }}</td>
                <td>{{ item.settleddate }}</td>
                <td><a href="{{ path('expenses/create', { 'id': item.id }) }}">変更</a></td>
                <td>削除</td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}